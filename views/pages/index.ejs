                        <span class="rounded-full bg-black px-4 py-2 text-xs font-semibold absolute right-2 top-2 text-white">PRO</span>
                      <% } %>
                       <div class="h-fit  shadow shadow-slate-200 mb-4 rounded-xl   border transition ease-out duration-300 border-gray-100 group-hover:border-gray-200">
                         <img src="<%= container.cover %>" class="my-auto aspect-[8/5] object-contain w-full h-full rounded-lg" alt="<%= container.title %> cover"
                         />
                       </div>
                       <h2 class="font-semibold text-base md:text-xl text-gray-700 my-2">
                         <%= container.title %>
                       </h2>
                       <h5 class="font-medium text-gray-400 text-sm">
                         <%= container.resume %>
              
                       </h5>
                     </a>
                   <% } %>

                
